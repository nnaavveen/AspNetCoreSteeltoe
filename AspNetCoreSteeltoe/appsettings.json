{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Pivotal": "Information",
      "Steeltoe": "Information"
    },
    "Console": {
      "DisableColors": true
    }
  },
  "spring": {
    "application": {
      "name": "opldService"
    }
